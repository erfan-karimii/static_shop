Date.prototype.dayMonthYear = function() {
	var month = (this.getMonth() + 1).toString();
	var dd = this.getDate().toString();
	var yyyy = this.getFullYear().toString();
	
	return (dd[1] ? dd : "0" + dd[0]) + "-" + (month[1] ? month : "0" + month[0]) + "-" + yyyy;
};


